<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:clickable="false">

    <ImageView
        android:id="@+id/imNewsImage"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/onepieceofnews_big_height"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_photo"

        android:visibility="visible" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="?attr/font_xxlarge"
        android:layout_gravity="bottom"
        android:background="@color/blackTransparent"
        android:clickable="false"
        android:textColor="@color/text_color_white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:text="PPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPP"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="105dp"
        android:layout_height="3dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"></LinearLayout>

</RelativeLayout>