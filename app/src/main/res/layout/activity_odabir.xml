<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stefanelez.infonmation.OdabirActivity"
    android:background="@drawable/infonmationpocetna"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:layout_marginTop="75dp"
        android:weightSum="1"
        android:layout_weight="0.57">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Racunarske mreze i telekomunikacije"
            android:id="@+id/rmt_checkBox"
            android:checked="false"
            android:singleLine="false"
            android:buttonTint="@android:color/background_dark"
            android:width="@dimen/activity_vertical_margin"
            android:layout_weight="0.22" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arhitektura racunara i operativni sistemi"
            android:id="@+id/aros_checkBox"
            android:checked="false"
            android:buttonTint="@android:color/background_dark"
            android:layout_weight="0.19" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Osnove informaciono telekomunikacionih tehnologija"
            android:id="@+id/oikt_checkBox"
            android:checked="false"
            android:buttonTint="@android:color/background_dark"
            android:layout_weight="0.20" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baze podataka"
            android:id="@+id/bp_checkBox"
            android:buttonTint="@android:color/background_dark"
            android:layout_weight="0.12"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programski jezici"
            android:id="@+id/pj_checkBox"
            android:buttonTint="@android:color/background_dark"
            android:layout_weight="0.27"
            android:checked="false" />

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/back_button"
        android:layout_toStartOf="@+id/back_button"
        android:layout_alignTop="@+id/back_button">

        <RadioButton
            android:layout_width="217dp"
            android:layout_height="44dp"
            android:text="Rezultati"
            android:id="@+id/rezultati_button"
            android:checked="false"
            android:background="@android:color/transparent"
            android:textStyle="normal|bold|italic"
            android:textColorLink="#ef6c09"
            android:textColor="@color/colorAccent"
            android:buttonTint="#051636"
            android:singleLine="true" />

        <RadioButton
            android:layout_width="219dp"
            android:layout_height="match_parent"
            android:text="Sva obavestenja"
            android:id="@+id/obavestenja_button"
            android:checked="false"
            android:background="@android:color/transparent"
            android:textStyle="normal|bold|italic"
            android:textColorLink="?attr/actionMenuTextColor"
            android:textColor="@color/colorAccent"
            android:buttonTint="#051636" />
    </RadioGroup>

</LinearLayout>