<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stefanelez.infonmation.OdabirActivity"
    android:background="#adaaaa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/back_button">

        <CheckBox
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:text="Racunarske mreze i telekomunikacije"
            android:id="@+id/rmt_checkBox"
            android:layout_weight="0.19"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arhitektura racunara i operativni sistemi"
            android:id="@+id/aros_checkBox"
            android:layout_weight="0.19"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Osnove informaciono telekomunikacionih tehnologija"
            android:id="@+id/oikt_checkBox"
            android:layout_weight="0.19"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baze podataka"
            android:id="@+id/bp_checkBox"
            android:layout_weight="0.19"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programski jezici"
            android:id="@+id/pj_checkBox"
            android:layout_weight="0.19"
            android:checked="false" />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Nazad"
        android:id="@+id/back_button"
        android:onClick="goBack"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_odabir"
        android:clickable="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/back_button"
        android:layout_toStartOf="@+id/back_button"
        android:layout_alignTop="@+id/back_button">
            <RadioButton
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:text="Rezultati"
                android:id="@+id/radioButton"
                android:checked="false"
                android:background="@drawable/button_odabir"
                android:layout_marginBottom="5dp"/>

            <RadioButton
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:text="Sva obavestenja"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:background="@drawable/button_odabir"
                android:layout_marginTop="10dp" />

    </RadioGroup>

</RelativeLayout>
